<section>
  <h2>CREATE NEW POST</h2>

    <form class="new-post-form">
      <div>
        <label for="post-title">POST TITLE</label>
        <input type="text" id="post-title" name="post-title" />
      </div>
      <div>
        <label for="post-text">COMMENT</label>
        <textarea id="post-text" name="post-text"></textarea>
      </div>
      <button type="submit" class="btn">CREATE POST</button>
    </form>
  </div>
</section>


{{#if posts.length}}
<section>
  <h2>YOUR POSTED CONTENT</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">EDIT POST</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>